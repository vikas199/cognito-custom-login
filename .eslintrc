{
  "extends": "eslint-config-standard",
  "plugins": [
    "react",
    "import"
  ],
  "globals": {
    "document": true,
    "window": true,
    "sessionStorage": true,
    "fetch": false,
    "page": true,
    "browser": true,
    "jestPuppeteer": true
  },

  "rules": {
    "no-unused-vars": [0, { "vars": "local", "args": "after-used", "ignoreRestSiblings": false }],
    "react/require-extension": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "env": {
    "jest": true,
    "jasmine": true
  }
}
